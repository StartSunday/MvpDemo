<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScrollBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbarSize">@dimen/line_size</item>

        <item name="android:scrollbarTrackVertical">@color/white</item>
    </style>
    <!--item项控件样式-->
    <style name="ItemDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:paddingRight">@dimen/view_margin</item>
        <item name="android:paddingTop">@dimen/view_margin</item>
        <item name="android:paddingBottom">@dimen/view_margin</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--列表中item的样式-->
    <style name="ItemDefault.List">
        <item name="android:background">@drawable/shape_white_corners_fill</item>
        <item name="android:layout_marginTop">@dimen/view_margin_small</item>
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
    </style>
    <!--线条样式-->
    <style name="Line">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="Line_Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_margin_xsmall</item>
        <item name="android:background">@color/line</item>
    </style>
    <style name="Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/line</item>
    </style>

